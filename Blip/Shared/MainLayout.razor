@inherits LayoutComponentBase

<Layout Sider="true" Background="Background.Dark">
  <LayoutSider>
    <LayoutSiderContent>
      <Bar Mode="BarMode.VerticalInline"
           CollapseMode="BarCollapseMode.Small"
           Breakpoint="Breakpoint.Desktop"
           NavigationBreakpoint="Breakpoint.Tablet"
           ThemeContrast="ThemeContrast.Dark"
           Background="Background.Dark"
           @ref="@sidebar">
         <BarBrand>
          <BarItem>
            <BarLink To="#">
              Blip
            </BarLink>
          </BarItem>
        </BarBrand>
        <SideBarMenu/>
      </Bar>
    </LayoutSiderContent>

  </LayoutSider>
  <Layout>
    <Layout>
      <LayoutHeader Fixed="true">
        <Bar Breakpoint="Breakpoint.Desktop"
             ThemeContrast="ThemeContrast.Dark">
          <BarToggler Bar="@sidebar" Border="Border.Dark"/>
          <BarMenu>
            <BarStart>
            </BarStart>
            <BarEnd>
            </BarEnd>
          </BarMenu>
        </Bar>
      </LayoutHeader>
    </Layout>
    <Layout>
      <LayoutContent>
        @Body
      </LayoutContent>
    </Layout>
  </Layout>
</Layout>

@code {
  private Bar? sidebar;
}