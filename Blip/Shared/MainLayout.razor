@using Blip.Shared.Side
@using Blip.Shared.Top
@inherits LayoutComponentBase

<Layout Sider="true" Background="Background.Dark">
  <LayoutSider>
    <LayoutSiderContent>
      <Bar Mode="BarMode.VerticalInline"
           CollapseMode="BarCollapseMode.Hide"
           Breakpoint="Breakpoint.Desktop"
           NavigationBreakpoint="Breakpoint.Tablet"
           ThemeContrast="ThemeContrast.Dark"
           Background="Background.Dark"
           @ref="@sidebar">
        <BarBrand>
          <BarItem>
            <BarLink To="#">
              Blip
            </BarLink>
          </BarItem>
        </BarBrand>
        <SideBarMenu />
      </Bar>
    </LayoutSiderContent>
  </LayoutSider>
  <Layout>
    <LayoutHeader Fixed="true" Class="app-header">
      <Bar Breakpoint="Breakpoint.Desktop"
           ThemeContrast="ThemeContrast.Dark">
        <BarToggler Bar="@sidebar" Border="Border.Dark" />
        <TopBarMenu />
      </Bar>
    </LayoutHeader>
    <Layout>
      <LayoutContent>
        @Body
      </LayoutContent>
    </Layout>
  </Layout>
</Layout>

@code {
  private Bar? sidebar;
}